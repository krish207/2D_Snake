<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">

<!-- reason why to use an xml file instead of an image: so that the launch screen won't stretch-->
    <!-- the background color-->
    <item android:drawable="@color/colorDarkGrey"/>

    <!-- the logo -->
    <item>
        <bitmap android:src="@drawable/logo"
            android:gravity="center"/>
    </item>

</layer-list>

